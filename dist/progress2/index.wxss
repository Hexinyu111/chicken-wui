.i-progress {
  width: 30%;
  font-size: 12px;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 20rpx;
  /* left: 10rpx; */
}

.i-progress-outer {
  display: inline-block;
  width: 100%;
  margin-right: 0;
  padding-right: 0;
  box-sizing: border-box;
}

.i-progress-show-info .i-progress-outer {
  padding-right: 55px;
  margin-right: -99rpx;
}

.i-progress-inner {
  display: inline-block;
  width: 590rpx;
  background-color: #FFF5D1;
  border-radius: 100px;
  vertical-align: middle;
  font-size: 20rpx;
}

.i-progress-bg {
  border-radius: 100px;
  background-color: rgba(255, 187, 66, 1);
  transition: all 0.2s linear;
  position: relative;
}

.i-progress-text {
  display: inline-block;
  margin-left: 56rpx;
  text-align: left;
  font-size: 1em;
  vertical-align: middle;
}

.i-progress-active .i-progress-bg:before {
  content: '';
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 10px;
  animation: i-progress-active 2s ease-in-out infinite;
}

.i-progress-wrong .i-progress-bg {
  background-color: #ed3f14;
}

.i-progress-wrong .i-progress-text {
  color: #ed3f14;
}

.i-progress-success .i-progress-bg {
  background-color: #19be6b;
}

.i-progress-success .i-progress-text {
  color: #19be6b;
}
.i-progress-text-inner{
  color: #fff;
}
.progress-item{
  position: relative;
  bottom: 10rpx;
}
@keyframes i-progress-active {
  0% {
    opacity: 0.3;
    width: 0;
  }

  100% {
    opacity: 0;
    width: 100%;
  }
}
